                android:layout_alignParentRight="true"
                android:tint="@color/black"
                android:src="@drawable/ic_cross_circular_button_outline"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"/>
        </RelativeLayout>

