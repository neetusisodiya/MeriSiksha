<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00000000"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:theme="@style/ToolbarColoredBackArrow"
                app:title=""
                app:titleTextColor="@color/colorWhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:text="@string/app_name"
                        android:textColor="#fff"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/imageview_notification"
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_10"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/bell2" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_200"
            android:background="@drawable/download"/>


        <LinearLayout
            android:layout_marginTop="@dimen/margin_220"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:id="@+id/rl_task"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/red"
                            android:src="@drawable/task_assign" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Task"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/cvChat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/green_500"
                            android:src="@drawable/chat_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/font_10"
                            android:gravity="center"
                            android:text="Chat/Ptm"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:id="@+id/stu_attadance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/attend" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/font_10"
                            android:gravity="center"
                            android:text="Student Attendance"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/cvUploadDoc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/button_color"
                            android:src="@drawable/upload_document" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/font_10"
                            android:gravity="center"
                            android:text="Add Study Material"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:id="@+id/cvDailyQuiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Daily quiz"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                        <ImageView
                            android:id="@+id/iv_news"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/news"
                            android:src="@drawable/ic_nn" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:id="@+id/cvnotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/notifications"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                        <ImageView
                            android:id="@+id/iv_notification"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/yellow"
                            android:src="@drawable/ic_notifications" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/cvDiary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/video"
                            android:src="@drawable/student_diary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/font_10"
                            android:gravity="center"
                            android:text="Student Diary"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/cvCalender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/hover_color"
                            android:src="@drawable/school_calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/font_10"
                            android:gravity="center"
                            android:text="School calendar"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" /> />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_120"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:id="@+id/cvNotesList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Notes"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />
                        <ImageView
                            android:id="@+id/iv_notes"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/redTransparent"
                            android:src="@drawable/ic_notebook" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:id="@+id/cvGallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/gallery"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="@color/webdilog"
                            android:textSize="@dimen/margin_16" />

                        <ImageView
                            android:id="@+id/iv_ebook"
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_20"
                            android:tint="@color/ebook"
                            android:src="@drawable/ic_photo_library" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>