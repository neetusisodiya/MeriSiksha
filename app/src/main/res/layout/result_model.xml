<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:layout_marginBottom="@dimen/font_10"
        android:elevation="2dp"
        app:cardCornerRadius="@dimen/font_10"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Exam Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:fontName="Helvetica" />


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:id="@+id/ExamListExamName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"
                    app:fontName="Helvetica" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Total Question"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:fontName="Helvetica" />



                <com.muravtech.merishiksha.utils.CustomTextView
                    android:id="@+id/ExamListTotalQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"
                    app:fontName="Helvetica" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Total Marks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:fontName="Helvetica" />


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:id="@+id/tv_totalMarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"
                    app:fontName="Helvetica" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Total Subject"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:fontName="Helvetica" />


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:id="@+id/tv_total_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"
                    app:fontName="Helvetica" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                >


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:text="Exam Duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:fontName="Helvetica" />


                <com.muravtech.merishiksha.utils.CustomTextView
                    android:id="@+id/ExamListQuestionTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"
                    app:fontName="Helvetica" />

            </LinearLayout>

            <Button
                android:id="@+id/result_publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:background="#0674CC"
                android:layout_gravity="center_horizontal"
                android:shadowRadius="25"
                android:layout_marginTop="@dimen/font_10"
                android:text="Result Publish"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>