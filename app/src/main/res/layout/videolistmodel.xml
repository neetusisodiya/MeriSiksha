<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/font_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CourseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BCA"
                android:layout_marginLeft="@dimen/font_10"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SubjectID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Networking"
                android:layout_marginRight="@dimen/font_10"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_180"
                android:scaleType="centerCrop"
                android:src="@drawable/play"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>