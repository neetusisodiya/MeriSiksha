<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:logo="@drawable/logo"
            app:popupTheme="@style/AppTheme.NoActionBar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--
                <TextView
                    android:text="Time Left : 00:00 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textViewTimer" />




     !-->

                <!--
                           <com.rey.material.widget.ProgressView
                               android:id="@+id/circular_progress2"
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                              android:layout_centerInParent="true"
                               android:layout_margin="5dp"
                               android:visibility="gone"
                               app:pv_autostart="true"
                               app:pv_circular="true"
                               app:pv_progressMode="indeterminate"
                               app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />


                !-->

                <!--
                           <Button
                               android:text="Finish"
                               android:layout_width="wrap_content"
                               android:layout_height="35dp"
                               android:layout_alignParentRight="true"
                               android:background="@drawable/button_background_flip"
                               android:layout_alignParentEnd="true"
                               android:textColor="#FFFFFF"
                               android:layout_marginLeft="10dp"
                               android:id="@+id/buttonFinish" />
                !-->

                <TextView
                    android:id="@+id/textViewExamDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/circular_progress2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Downloading Exam. It will take a while. Please wait..."/>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/itemFooterColor"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scrollbars="none">

                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/leftArrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:src="@drawable/leftarrowic"
                        android:tint="@color/colorPrimary"/>

                    <ImageView
                        android:id="@+id/rightArrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:src="@drawable/rightarrowic"
                        android:tint="@color/colorPrimary"/>

                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rLayoutButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="0.15"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llPrivQn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/circle_blue"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/privQn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_arrow_left"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonPrevious"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/tab_indicator_color"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="Mark for Review &amp; Next"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonNext"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/tab_indicator_color"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="Save &amp; Next"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <com.muravtech.merishiksha.onlineexam.utilities.CustomViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="55dp"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawerLayoutLiner"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FFFFFF"
            android:focusable="true"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_attemptedQuestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Attempted Questions : 8/100"
                        android:textColor="@color/red_200"
                        android:textSize="18sp"/>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="( Click to go to questions directly )"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:id="@+id/linearAllButtonsLauout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="16dp"
                            android:text="Instructions :"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#60bae3"
                                    android:padding="4dp"
                                    android:text="#"
                                    android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="left|center"
                                    android:padding="4dp"
                                    android:text="You have not visited the question yet."

                                    android:textColor="@color/colorPrimary"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#ed5555"
                                    android:padding="4dp"
                                    android:text="#"
                                    android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="left|center"
                                    android:padding="4dp"
                                    android:text="You have not answered the question."

                                    android:textColor="@color/colorPrimary"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#37c482"
                                    android:padding="4dp"
                                    android:text="#"
                                    android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="left|center"
                                    android:padding="4dp"
                                    android:text="You have answered the question."

                                    android:textColor="@color/colorPrimary"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#f5d76e"
                                    android:padding="4dp"
                                    android:text="#"
                                    android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="left|center"
                                    android:padding="4dp"
                                    android:text="You have not answered the question but have marked the question for review."

                                    android:textColor="@color/colorPrimary"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#ff7900"
                                    android:padding="4dp"
                                    android:text="#"
                                    android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center"
                                    android:padding="4dp"
                                    android:text="You have answered the question but have marked the question for review."
                                    android:textColor="@color/colorPrimary"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
