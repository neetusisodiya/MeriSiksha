<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/iv_back"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />


    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/top"
        android:id="@+id/iv_preview"
        android:layout_width="@dimen/margin_200"
        android:layout_height="@dimen/margin_200"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_excel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_preview"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="vertical"
        android:weightSum="2">


        <Button
            android:id="@+id/writeExcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boundry_style"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Create Excel in Folder"
            android:textColor="#3281D2" />

<!--        <Button-->
<!--            android:id="@+id/readExcel"-->
<!--            android:layout_marginTop="@dimen/margin_20"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/boundry_style"-->
<!--            android:paddingTop="5dp"-->
<!--            android:paddingBottom="5dp"-->
<!--            android:text="Get Excel"-->
<!--            android:textColor="#3281D2" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/readExcel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/ebook"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>